{
  "name": "@hatena/eslint-config-hatena",
  "version": "1.0.0",
  "description": "ESLint config for @hatena",
  "repository": "https://github.com/hatena/eslint-config-hatena",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "type": "commonjs",
  "main": "config/index.js",
  "exports": {
    ".": "./config/index.js",
    "./+prettier": "./config/+prettier.js",
    "./+react": "./config/+react.js",
    "./+typescript": "./config/+typescript.js"
  },
  "files": [
    "config"
  ],
  "scripts": {
    "format": "prettier --write config '*.js'",
    "format:check": "prettier --check config '*.js'",
    "lint": "eslint --fix config '*.js'",
    "lint:check": "eslint config '*.js'",
    "configtest": "run-s -c 'configtest:*'",
    "configtest:javascript": "./configtest/javascript/run.sh",
    "configtest:typescript": "./configtest/typescript/run.sh",
    "configtest:typescript-react": "./configtest/typescript-react/run.sh",
    "prepublishOnly": "run-s format:check lint:check configtest"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0"
  },
  "peerDependencies": {
    "eslint": ">=6.8.0",
    "prettier": ">=2.0.5",
    "typescript": ">=3.9.3"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "autoInstall": false,
      "optional": false
    },
    "prettier": {
      "autoInstall": false,
      "optional": true
    },
    "typescript": {
      "autoInstall": false,
      "optional": true
    }
  },
  "devDependencies": {
    "@hatena/prettier-config-hatena": "https://github.com/hatena/prettier-config-hatena.git#v1.0.0",
    "@types/react": "^18.2.63",
    "eslint": "^8.57.0",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "typescript": "~5.3.3"
  }
}
